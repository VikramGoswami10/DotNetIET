@model _07ViewModel.Models.ProductViewModel;

<link href="~/twitter-bootstrap/css/bootstrap.min.css" rel="stylesheet" />


<p class="text-bg-info">Index</p>
<div class="card" style="width: 18rem;">
    <img src="~/Images/img21.jpg" class="card-img-top" alt="Asus Laptop">
    <div class="card-body">
        <h5 class="card-title">@Model.Product.Name</h5>
        <p class="card-text">@Model.Message</p>
        @if(@Model.isInStock)
        {
            <p class="card-text">in Stock</p>
        }else
        {
            <p class="card-text">out of Stock</p>
        }
        
        <a href="/Home/ProductDeatils/@Model.Product.Id" class="btn btn-primary">Product Details</a>
    </div>
</div>

<script src="~/twitter-bootstrap/js/bootstrap.min.js"></script>